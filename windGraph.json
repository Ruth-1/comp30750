{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/Ruth-1/comp30750/main/wind_usa_cleaned_st.csv"
  },
  "vconcat": [
    {
      "hconcat": [
        { //green bar chart
          "width": 400,
          "height": 400,
          "mark": "bar",
          "params": [
            {
              "name": "bar_click",
              "select": {
                "type": "point",
                "encodings": [
                  "color"
                ]
              }
            }
          ],
          "transform": [
            {
              "filter": "drag"
            }
          ],
          "encoding": {
            "x": {
              "field": "p_tnum",
              "type": "quantitative",
              "scale": {
                "type": "log"
              },
              "axis": {
                "grid": false
              }
            },
            "y": {
              "field": "t_state",
              "type": "nominal"
            },
            "color": {
              "condition": {
                "param": "bar_click",
                "field": "t_state",
                "type": "nominal",
                // "scale": {
                //   "range": [
                //     "olive"
                //   ]
                // },
                "legend": null
              },
              "value": "lightgrey"
            }
          }
        },
        { //blue bar chart
          "mark": "bar",
          "width": 100,
          "height": 400,
          "params": [
            {
              "name": "bar_click2",
              "select": {
                "type": "point",
                "encodings": [
                  "color"
                ]
              }
            }
          ],
          "transform": [
            {
              "aggregate": [
                {
                  "op": "count",
                  "as": "Manufacturers"
                }
              ],
              "groupby": [
                "t_manu"
              ]
            },
            {
              "filter": "datum.Manufacturers > 3"
            }
          ],
          "encoding": {
            "x": {
              "field": "Manufacturers",
              "type": "quantitative",
              "scale": {
                "type": "linear"
              }
            },
            "y": {
              "field": "t_manu",
              "type": "nominal",
              "sort": "-x"
            },
            "color": {
              "condition": {
                "field": "t_manu",
                "param": "bar_click2"
              },
              "value": "lightgrey"
            }
          }
        }
      ]
    },
    {
      "hconcat": [
        { //map
          "width": 500,
          "height": 400,
          "layer": [
            {
              "data": {
                "url": "data/us-10m.json",
                "format": {
                  "type": "topojson",
                  "feature": "states"
                }
              },
              "projection": {
                "type": "albersUsa"
              },
              "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
              }
            },
            { //dots on map
              "mark": "circle",
              "transform": [
                {
                  "filter": {
                    "param": "bar_click"
                  }
                },
                {
                  "filter": {
                    "param": "bar_click2"
                  }
                }
              ],
              "encoding": {
                "longitude": {
                  "field": "xlong",
                  "type": "quantitative"
                },
                "latitude": {
                  "field": "ylat",
                  "type": "quantitative"
                },
                "size": {
                  "value": 10
                },
                "tooltip": {
                  "field": "p_name",
                  "type": "nominal"
                },
                "color": {
                  "condition": {
                    "param": "drag",
                    "field": "t_state",
                    "type": "nominal",
                    "scale": {
                      "range": [
                        "olive"
                      ]
                    }
                  },
                  "value": "lightgrey"
                }
              }
            }
          ]
        },
        { //scatter plot
          "mark": {
            "type": "circle"
          },
          "height": 400,
          "width": 400,
          "params": [
            {
              "name": "drag",
              "select": {
                "type": "interval"
              }
            }
          ],
          "transform": [
            {
              "filter": {
                "param": "bar_click"
              }
            },
            {
              "filter": {
                "param": "bar_click2"
              }
            }
          ],
          "encoding": {
            "y": {
              "axis": {
                "title": "Year Operational",
                "gridOpacity": 0.25,
                "titleFontSize": 17
              },
              "field": "p_year",
              "type": "quantitative",
              "scale": {
                "domain": [
                  1980,
                  2020
                ]
              }
            },
            "x": {
              "axis": {
                "gridOpacity": 0.25,
                "title": "Height of Turbine",
                "titleFontSize": 17
              },
              "field": "t_ttlh",
              "type": "quantitative"
            },
            "tooltip": {
              "field": "p_name",
              "type": "nominal"
            },
            "color": {
              "condition": {
                "param": "drag",
                "field": "t_state",
                "type": "nominal",
                "scale": {
                  "range": [
                    "olive"
                  ]
                }
              },
              "value": "lightgrey"
            }
          }
        }
      ]
    }
  ]
}