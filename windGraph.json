{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/Ruth-1/comp30750/main/wind_usa_cleaned_st.csv"
  },
  "title": {
    "text": "US Wind Turbine Data",
    "anchor": "middle",
    "fontSize": 20,
    "align": "center",
    "fontWeight": "bolder"
  },
  "transform": [
    {
      "filter": "datum.t_cap > 0"
    }
  ],
  "vconcat": [
    {
      "hconcat": [
        {
          "width": 80,
          "height": 350,
          "mark": "bar",
          "params": [
            {
              "name": "bar_click",
              "select": {
                "type": "point"
              }
            }
          ],
          "transform": [
            {
              "filter": {
                "param": "drag"
              }
            },
            {
              "filter":{
                "param": "legend_click"
              }
            }
          ],
          "encoding": {
            "x": {
              "field": "p_tnum",
              "type": "quantitative",
              "scale": {
                "type": "log"
              },
              "axis": {
                "title": "Number of Turbines in Project",
                "titleFontSize": 12,
                "grid": false,
                "labelFontSize": 12,
                "labelPadding": 12,
                "labelFontWeight": "bold"
              }
            },
            "y": {
              "field": "t_state",
              "type": "nominal",
              "axis": {
                "title": "States",
                "gridOpacity": 0.25,
                "titleFontSize": 12,
                "labelFontSize": 10,
                "labelPadding": 10,
                "grid": true,
                "labelFontWeight": "bold"
              },
              "sort": null
            },
            "color": {
              "condition": {
                "param": "bar_click",
                "value": "orange",
                "type": "nominal",
                "legend": null
              },
              "value": "lightgrey"
            }
          }
        },
        {
          "width": 500,
          "height": 350,
          "layer": [
            {
              "data": {
                "url": "data/us-10m.json",
                "format": {
                  "type": "topojson",
                  "feature": "states"
                }
              },
              "projection": {
                "type": "albersUsa"
              },
              "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
              }
            },
            {
              "mark": "circle",
              "params": [
                {
                  "name": "lgs",
                  "select": {
                    "type": "point",
                    "fields": [
                      "t_manu"
                    ]
                  },
                  "bind": "legend"
                }
              ],
              "transform": [
                {
                  "filter": {
                    "param": "bar_click"
                  }
                },
                {
                  "filter": {
                    "param": "tick_drag"
                  }
                },
                {
                  "filter": {
                    "param": "drag"
                  }
                },
                {
                  "filter":{
                    "param": "legend_click"
                  }
                }
              ],
              "encoding": {
                "longitude": {
                  "field": "xlong",
                  "type": "quantitative"
                },
                "latitude": {
                  "field": "ylat",
                  "type": "quantitative"
                },
                "size": {
                  "field": "t_manu",
                  "type": "nominal",
                  "legend": null,
                  "scale": {
                    "range": [
                      80,
                      80
                    ]
                  }
                },
                "tooltip": {
                  "field": "p_name",
                  "type": "nominal"
                },
                "color": {
                  "value": "blue",
                  "legend": null
                },
                "opacity": {
                  "condition": {
                    "param": "lgs",
                    "value": 1,
                    "legend": null
                  },
                  "value": 0
                }
              }
            }
          ]
        }
      ]
    },
    {
      "hconcat": [
        {
          "mark": {
            "type": "circle"
          },
          "height": 300,
          "width": 500,
          "params": [
            {
              "name": "drag",
              "select": {
                "type": "interval"
              }
            },
            {
              "name": "legend_click",
              "select": {
                "type": "point",
                "fields": [
                  "Range"
                ]
              },
              "bind": "legend"
            }
          ],
          "transform": [
            {
              "filter": {
                "param": "bar_click"
              }
            },
            {
              "filter": {
                "param": "tick_drag"
              }
            },
            {
              "filter": "datum.t_ttlh > 0 "
            }
          ],
          "encoding": {
            "y": {
              "axis": {
                "title": "Year Operational",
                "gridOpacity": 0.25,
                "titleFontSize": 12,
                "format": "d",
                "labelFontSize": 10,
                "labelPadding": 10,
                "grid": true,
                "labelFontWeight": "bold"
              },
              "field": "p_year",
              "type": "quantitative",
              "scale": {
                "domain": [
                  1980,
                  2020
                ]
              }
            },
            "x": {
              "axis": {
                "gridOpacity": 0.25,
                "title": "Height of Turbine (Metres)",
                "titleFontSize": 12,
                "labelFontSize": 10,
                "labelPadding": 10,
                "grid": true,
                "labelFontWeight": "bold"
              },
              "field": "t_ttlh",
              "type": "quantitative",
              "scale": {
                "domain": [
                  0,
                  200
                ]
              }
            },
            "tooltip": {
              "field": "p_name",
              "type": "nominal"
            },
            "color": {
              "condition": {
                "param": "drag",
                "field": "Range",
                "legend": {
                  "title": "Capacity (kW)",
                  "values": [
                    "< 1000",
                  "1000 - 2000",
                  "2000 - 3000",
                  "â‰¥ 3000"
                  ]
                },
                "scale": {
                  "range": [
                    "red"
                  ]
                }
              },
              "value": "lightgrey"
            },
            "size": {
              "field": "t_cap",
              "scale": {
                "range": [
                  350,
                  10
                ]
              }
            },
            "opacity": {
              "condition": {
                "param": "legend_click",
                "value": 0.4
              },
              "value": 0
            }
          }
        },
        {
          "width": 50,
          "height": 300,
          "mark": {
            "type": "tick",
            "orient": "horizontal"
          },
          "transform": [
            {
              "filter": "datum.t_model != 'missing'"
            },
            {
              "filter": {
                "param": "drag"
              }
            },
            {
              "filter":{
                "param": "legend_click"
              }
            }
          ],
          "params": [
            {
              "name": "tick_drag",
              "select": {
                "type": "interval"
              }
            }
          ],
          "encoding": {
            "y": {
              "field": "t_cap",
              "type": "quantitative",
              "scale": {
                "domain": [
                  1,
                  6200
                ],
                "type": "linear"
              },
              "axis": {
                "title": "Capacity"
              }
            },
            "tooltip": {
              "field": "t_model",
              "type": "nominal"
            }
          }
        }
      ]
    }
  ]
}
