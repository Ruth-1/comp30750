{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/Ruth-1/comp30750/main/wind_usa_cleaned_st2.csv"
  },
  "title": {
    "text": "US Wind Turbine Data",
    "anchor": "middle",
    "fontSize": 20,
    "align": "center",
    "fontWeight": "bolder"
  },
  "transform": [
    {
      "filter": "datum.t_cap > 0"
    }
  ],
  "vconcat": [
    {
      "hconcat": [
      {
        "title": {
          "text": "Number of Turbines per State",
          "anchor": "middle",
          "fontSize": 16,
          "align": "center",
          "fontWeight": "bolder"
        },
          "width": 180,
          "height": 350,
          "mark": "bar",
          "params": [
            {
              "name": "bar_click",
              "select": {
                "type": "interval"
              }
            }
          ],
          "transform": [
            {
              "filter": {
                "param": "drag"
              }
            },
            {
              "filter": {
                "param": "dot_click"
              }
            },
            {
              "filter":{
                "param": "legend_click"
              }
            },
            {
              "filter": {
                "param": "tick_drag"
              }
            }
          ],
          "encoding": {
            "x": {

              "field": "p_tnum",
              "type": "quantitative",
              "scale": {
                "type": "linear"
              },
              "axis": {
                "title": "Number of Turbines in Project",
                "titleFontSize": 12,
                "grid": false,
                "labelFontSize": 10,
                "labelPadding": 10,
                "labelFontWeight": "bold"
              }

            },
            "y": {
              "field": "t_state",
              "axis": {
                "title": "States",
                "gridOpacity": 0.25,
                "titleFontSize": 12,
                "labelFontSize": 10,
                "labelPadding": 10,
                "grid": true,
                "labelFontWeight": "bold"
              },
              "sort": "-x"
            },
            "color": {
              "condition": {
                "param": "bar_click",
                "value": "#CD5888"

              },
              "value": "lightgrey"
            },
            "tooltip": {
              "field": "t_county"
            }
          }
        },
        {
          "width": 500,
          "height": 350,
          "layer": [
            {
              "data": {
                "url": "data/us-10m.json",
                "format": {
                  "type": "topojson",
                  "feature": "states"
                }
              },
              "projection": {
                "type": "albersUsa"
              },
              "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
              }
            },
            {
              "mark": {
                "type": "circle",
                "size": 10
              },
              "params": [
                {
                  "name": "dot_click",
                  "select": {
                    "type": "point"
                  }
                }
              ],
              "transform": [
                {
                  "filter": {
                    "param": "bar_click"
                  }
                },
                {
                  "filter": {
                    "param": "tick_drag"
                  }
                },
                {
                  "filter": {
                    "param": "drag"
                  }
                },
                {
                  "filter":{
                    "param": "legend_click"
                  }
                }
              ],
              "encoding": {
                "longitude": {
                  "field": "xlong",
                  "type": "quantitative"
                },
                "latitude": {
                  "field": "ylat",
                  "type": "quantitative"
                },
                "size": {
                  "field": "t_manu",
                  "type": "nominal",
                  "legend": null,
                  "scale": {
                    "range": [
                      40,
                      40
                    ]
                  }
                },
                "tooltip": {
                  "field": "p_name",
                  "type": "nominal"
                },
                "color": {
                  "value": "#913175",
                  "legend": null
                },
                "opacity":{
                  "condition": {
                    "param": "dot_click",
                    "value": 1
                  },
                  "value": 0.1
                }
              }
            }
          ]
        }
      ]
    },
    {
      "hconcat": [
        {
          "mark": {
            "type": "circle"
          },
          "title": {
            "text": "Year Operation vs Height of Turbine",
            "anchor": "middle",
            "fontSize": 16,
            "align": "center",
            "fontWeight": "bolder"
          },
          "height": 300,
          "width": 500,
          "params": [
            {
              "name": "drag",
              "select": {
                "type": "interval"
              }
            },
            {
              "name": "legend_click",
              "select": {
                "type": "point",
                "fields": [
                  "Range"
                ]
              },
              "bind": "legend"
            }
          ],
          "transform": [
            {
              "filter": {
                "param": "bar_click"
              }
            },
            {
              "filter": {
                "param": "tick_drag"
              }
            },
            {
              "filter": {
                "param": "dot_click"
              }
            },
            {
              "filter": "datum.t_ttlh > 0 "
            }
          ],
          "encoding": {
            "y": {
              "axis": {
                "title": "Year Operational",
                "gridOpacity": 0.25,
                "titleFontSize": 12,
                "format": "d",
                "labelFontSize": 10,
                "labelPadding": 10,
                "grid": true,
                "labelFontWeight": "bold"
              },
              "field": "p_year",
              "type": "quantitative",
              "scale": {
                "domain": [
                  1980,
                  2020
                ]
              }
            },
            "x": {
              "axis": {
                "gridOpacity": 0.25,
                "title": "Height of Turbine (Metres)",
                "titleFontSize": 12,
                "labelFontSize": 10,
                "labelPadding": 10,
                "grid": true,
                "labelFontWeight": "bold"
              },
              "field": "t_ttlh",
              "type": "quantitative",
              "scale": {
                "domain": [
                  0,
                  200
                ]
              }
            },
            "tooltip": {
              "field": "t_manu",
              "type": "nominal"
            },
            "color": {
              "condition": {
                "param": "drag",
                "field": "Range",
                "legend": {
                  "title": "Capacity (kW)",
                  "values": [
                    "< 1000",
                    "1000 - 2000",
                    "2000 - 3000",
                    "â‰¥ 3000"
                  ]
                },

                "scale": {
                  "range": [
                    "#20262E"
                  ]
                }
              },
              "value": "lightgrey"
            },
            "size": {
              "field": "t_cap",
              "scale": {
                "range": [
                  350,
                  10
                ]
              }
            },
            "opacity": {
              "condition": {
                "param": "legend_click",
                "value": 0.4
              },
              "value": 0
            }
          }
        },
        {
          "width": 50,
          "height": 300,
          "title": {
            "text": "Capacity of Wind Turbines",
            "anchor": "middle",
            "fontSize": 16,
            "align": "center",
            "fontWeight": "bolder"
           },
          "mark": {
            "type": "tick",
            "orient": "horizontal"
          },
          "transform": [
            {
              "filter": "datum.t_model != 'missing'"
            },
            {
              "filter": {
                "param": "drag"
              }
            },
             {
              "filter": {
                "param": "bar_click"
              }
            },
            {
              "filter": {
                "param": "dot_click"
              }
            },
            {
              "filter":{
                "param": "legend_click"
              }
            }
          ],
          "params": [
            {
              "name": "tick_drag",
              "select": {
                "type": "interval"
              }
            }
          ],
          "encoding": {
            "y": {
              "field": "t_cap",
              "type": "quantitative",
              "scale": {
                "domain": [
                  1,
                  4000
                ],
                "type": "linear"
              },
              "axis": {
                "title": "Capacity (kW)",
                "labelFontSize": 10,
                "labelPadding": 10,
                "grid": true,
                "labelFontWeight": "bold"
              }
            },
            "tooltip": {
              "field": "t_model",
              "type": "nominal"
            }
          }
        }
      ]
    }
  ]
}
